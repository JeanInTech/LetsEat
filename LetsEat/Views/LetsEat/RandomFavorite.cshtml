@model FavoriteRecipes

<h3>How about...</h3>
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@Model.Thumbnail" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><u>Ingredients Needed:</u> @Model.Ingredients</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Rating: @Model.Rating/5</li>
        <li class="list-group-item">Category: @Model.Category</li>
    </ul>
    <div class="card-body">
        <a href="@Model.RecipeUrl" class="card-link">Recipe Details</a>
    </div>

    <a asp-controller="LetsEat" asp-action="RandomFavorite">Not feeling it.</a>
</div>
