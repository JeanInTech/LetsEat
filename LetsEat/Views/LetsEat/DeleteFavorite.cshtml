@model FavoriteRecipes
<h2>Remove from Favorites</h2>

<div class="card" style="width: 18rem;">
    @*@if (!string.IsNullOrEmpty(Model.Thumbnail))
        {
            <img class="card-img-top" src="@Model.Thumbnail" alt="Recipe image">
        }
        else
        {
            <img class="card-img-top" src="~/img/null_img.png" height="110" width="110" alt="Recipe Image">
        }*@
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><u>Ingredients Needed:</u> @Model.Ingredients</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Rating: @Model.Rating/5</li>
        <li class="list-group-item">Category: @Model.Category</li>
    </ul>
    <div class="card-body">
        <a href="@Model.RecipeUrl" class="card-link">Recipe Details</a>
    </div>
</div>

<p>Are you sure you want to remove this recipe from your favorites?</p>
<form asp-controller="LetsEat" asp-action="DeleteFavorite" method="post">
    <input type="hidden" name="Title" value="@Model.Title" />
    <input type="hidden" name="RecipeUrl" value="@Model.RecipeUrl" />
    <input type="hidden" name="Ingredients" value="@Model.Ingredients" />
    <input type="hidden" name="Thumbnail" value="@Model.Thumbnail" />
    <input type="hidden" name="Rating" value="@Model.Rating" />
    <input type="hidden" name="Category" value="@Model.Category" />
    <input type="submit" value="Yes" />
    <input type="submit" value="No" asp-controller="LetsEat" asp-action="ShowAllFavorites" />
</form>